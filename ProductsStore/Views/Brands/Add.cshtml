@model Brand

@{
    ViewBag.Title = "Добавление бренда";
    Layout = "_Layout";
}

<h2>Заполните форму для добавления бренда</h2>
<div class="row">
    <div class="phone_add_form col-md-6">
        <form asp-controller="Brands" asp-action="Add" method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <div>
                    <label for="">
                        Наименование бренда
                        <input required class="form-control" asp-for="Name" type="text">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </label>
                </div>
                <div>
                    <label for="">
                        Email
                        <input required class="form-control" asp-for="Email" type="text">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </label>
                </div>
                <div>
                    <label for="">
                        Введите дату основания:
                    </label>
                    <div>
                        <input type="date" asp-for="FoundationDate">
                        <span asp-validation-for="FoundationDate" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <button type="submit">Создать бренд</button>
        </form>
    </div>
</div>
<button class="mt-3"><a class="text-dark" asp-controller="Brands" asp-action="Index">Список брендов</a></button>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}