@model Category

@{
    ViewBag.Title = "Добавление категорий";
    Layout = "_Layout";
}
<h2>Заполните форму для добавления категорий</h2>
<div class="row">
    <div class="phone_add_form col-md-6">
        <form asp-action="Add" method="post">
            <div class="form-group">
                <label for="">
                    Наименование категорий
                    <input class="form-control" asp-for="Name" type="text">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </label>
            </div>
            <button type="submit">Создать категорию</button>
        </form>
    </div>
</div>

<button class="mt-3">
    <a class="text-dark" asp-controller="Categories" asp-action="Index">Список катергорий</a>
</button>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}