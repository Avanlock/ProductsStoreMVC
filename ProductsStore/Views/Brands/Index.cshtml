@model System.Collections.Generic.List<ProductsStore.Models.Brand>

@{
    ViewBag.Title = "Список брендов";
    Layout = "_Layout";
}

@if (Model.Count == 0)
{
    <h2>Список пуст</h2>
}
else
{
    <table class="table-bordered" style="width: 50%;">
        <tr>
            <th>Id</th>
            <th>Наименование</th> 
            <th class="text-center">Действие</th>
        </tr>
        @foreach (var brand in @Model)
        {
            <tr>
                <th>@brand.Id</th>
                <td>@brand.Name</td>
                <td class="text-center">
                    <a asp-route-brandId="@brand.Id"
                       asp-action="Delete"
                       asp-controller="Brands"
                       class="btn btn-outline-danger">
                        Удалить
                    </a>
                </td>
            </tr>
        }
    </table>
}