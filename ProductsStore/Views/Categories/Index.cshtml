@model System.Collections.Generic.List<ProductsStore.Models.Category>

@{
    ViewBag.Title = "Список категорий";
    Layout = "_Layout";
}

@if (Model.Count == 0)
{
    <h2>Список пуст</h2>
}
else
{
    <table class="table-bordered" style="width: 50%;">
        <tr>
            <th>Id</th>
            <th>Наименование</th>
            <th class="text-center">Действие</th>
        </tr>
        @foreach (var category in @Model)
        {
            <tr>
                <th>@category.Id</th>
                <td>@category.Name</td>
                <td class="text-center">
                    <a onclick="myFunction()" asp-route-categoryId="@category.Id"
                       asp-action="Delete"
                       asp-controller="Categories"
                       class="btn btn-outline-danger">
                        Удалить
                    </a>
                </td>
            </tr>
        }
    </table>
}

