@model Brand

@{
    ViewBag.Title = "Редактирования бренда";
    Layout = "_Layout";
}

<h2>Заполните форму для редактирования бренда</h2>
<div class="row">
    <div class="phone_add_form col-md-6">
        <form asp-controller="Brands" asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <div>
                    <label for="">
                        Наименование бренда
                        <input required class="form-control" asp-for="Name" type="text">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </label>
                </div>
                <div>
                    <label for="">
                        Email
                        <input required class="form-control" asp-for="Email" type="text">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </label>
                </div>
                <div>
                    <label for="">
                        Введите дату основания:
                    </label>
                    <div>
                        <input type="date" asp-for="FoundationDate">
                        <span asp-validation-for="FoundationDate" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <button type="submit">Редактировать бренд</button>
            <div class="form-group">
                <label for="">
                    <input hidden asp-for="Id" value="@Model.Id">
                </label>
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}