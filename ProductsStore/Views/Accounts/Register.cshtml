@model ProductsStore.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Регистрация";
}
 
<h2>Регистрация</h2>
 
<form asp-action="Register" asp-controller="Accounts" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="UserName">Введите имя</label><br />
            <input type="text" asp-for="UserName" /><br/>
            <span class="text-danger" asp-validation-for="UserName"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email">Введите Email</label><br/>
            <input type="text" asp-for="Email"/><br/>
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Введите пароль</label><br/>
            <input asp-for="Password"/><br/>
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword">Повторите пароль</label><br/>
            <input asp-for="ConfirmPassword"/><br/>
            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
        </div>
        <div>
            <button class="btn btn-primary" type="submit">Регистрация</button>
        </div>
    </div>
</form>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}