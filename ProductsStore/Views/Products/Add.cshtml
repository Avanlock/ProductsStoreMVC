@model Product

@{
    ViewBag.Title = "Добавление товар";
    Layout = "_Layout";
}

<h2>Заполните форму для добавления товара</h2>
<div class="row">
    <div class="col-md-6">
        <form asp-action="Add" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="">
                    Наименование
                    <input class="form-control" asp-for="Name" type="text">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </label>
            </div>

            <div class="form-group">
                <label for="">
                    Цена
                    <input class="form-control" asp-for="Price" type="text">
                    <span asp-validation-for="Price" class="text-danger"></span>
                </label>
            </div>
            <div class="form-group">
                <label for="">
                    Категория товара
                    <select required asp-for="CategoryId" asp-items="@ViewBag.categoryItems" class="form-control">
                        <option disabled selected>-- Выберите категорию --</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </label>
            </div>

            <div class="form-group">
                <label for="">
                    Бренд товара
                    <select required asp-for="BrandId" asp-items="@ViewBag.brandItems" class="form-control">
                        <option disabled selected>-- Выберите бренд --</option>
                    </select>
                    <span asp-validation-for="BrandId" class="text-danger"></span>
                </label>
            </div>

            <div class="form-group">
                <label for="">
                    Загрузить картинку
                    <input class="form-control" name="files" id="uploadBox" type="file" accept="image/png, image/jpeg" multiple>
                </label>
                <span asp-validation-for="ImgUrl" class="text-danger"></span>
            </div>
            <button type="submit">Создать</button>
        </form>
    </div>
</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}