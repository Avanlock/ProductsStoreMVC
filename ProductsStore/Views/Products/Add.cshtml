@model Product

@{
    ViewBag.Title = "Добавление товар";
    Layout = "_Layout";
}

<h2>Заполните форму для добавления товара</h2>
<div class="row">
    <div class="col-md-6">
        <form asp-action="Add" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="">
                    Наименование
                    <input class="form-control" asp-for="Name" type="text">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </label>
            </div>

            <div class="form-group">
                <label for="">
                    Цена
                    <input class="form-control" asp-for="Price" type="number">
                    <span asp-validation-for="Price" class="text-danger"></span>
                </label>
            </div>
            <div class="form-group">
                <label for="">
                    Категория товара
                    <select required asp-for="CategoryId" asp-items="@ViewBag.categoryItems" class="form-control">
                    </select>
                </label>
            </div>

            <div class="form-group">
                <label for="">
                    Бренд товара
                    <select required asp-for="BrandId" asp-items="@ViewBag.brandItems" class="form-control">
                    </select>
                </label>
            </div>

            <div class="form-group">
                <label for="">
                    Ссылка на картинку
                    <input class="form-control" asp-for="ImgUrl" type="text">
                </label>
                <span asp-validation-for="ImgUrl" class="text-danger"></span>
            </div>
            <button type="submit">Создать</button>
        </form>
    </div>
</div>
