@model ProductsStore.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Вход";
}

<h2>Вход на сайт</h2>
<div class="d-flex">
    <div>
        <form asp-action="Login" asp-controller="Accounts" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div>
                <div class="form-group">
                    <label asp-for="Email">Введите Email</label><br />
                    <input type="text" asp-for="Email" /><br/>
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password">Введите пароль</label><br />
                    <input asp-for="Password" /><br/>
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary" type="submit">Войти</button>
                </div>
                <a class="btn btn-outline-info" asp-action="Register" asp-controller="Accounts">Создать аккаунт</a>
            </div>
        </form>
    </div>
    <div class="ml-5">
        <h3>Данные админа</h3>
        <p>Login: admin@admin.com</p>
        <p>Password: 1234</p>
    </div>
</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}